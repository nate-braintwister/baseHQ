<header class="page-header">
    <h1 class="display-3 page-title">{{page.title}}</h1>
</header>

<div class="form-container">
  <form>
    <div class="form-group">
      <label for="searchByArea">Search by area</label>
      <input type="text" class="form-control" id="searchByArea" aria-describedby="emailHelp" placeholder="Search by country, city, area...">
    </div>

    <div class="form-group">
      <label for="exampleSelect1">I will be staying</label>
      <select class="form-control" id="exampleSelect1">
        <option>Short-term</option>
        <option>Long-term</option>
        <option>Undecided</option>
      </select>
    </div>

    <div class="form-group">
      <label for="exampleSelect2">I will need this many rooms</label>
      <select multiple class="form-control" id="exampleSelect2">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5+</option>
      </select>
    </div>

    <div class="form-group">
      <label for="exampleSelect2">For this many people</label>
      <select multiple class="form-control" id="exampleSelect2">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5+</option>
      </select>
    </div>

    <fieldset class="form-group">
      <legend>I am looking for:</legend>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked>
          Rooms to let/rent
        </label>
      </div>
      <div class="form-check">
      <label class="form-check-label">
          <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
          Rooms wanted
        </label>
      </div>
      <div class="form-check disabled">
      <label class="form-check-label">
          <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios3" value="option3" disabled>
          Buddy up
        </label>
      </div>
    </fieldset>

    <fieldset class="form-group">
      <legend>I want the following included in the results:</legend>
      <div class="form-check">
        <label class="form-check-label">
          <input type="checkbox" class="form-check-input">
          Rooms in existing apartment shares
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="checkbox" class="form-check-input">
          Studio apartments
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="checkbox" class="form-check-input">
          Whole properties
        </label>
      </div>
    </fieldset>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
